
@{
    ViewBag.Title = "Actividades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>

<h2>ACTIVIDADES</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="card-header">
            ACTIVIDAD
        </div>
        <div class="card-body">
            <table id="tblActividad" class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th class="titulo">Titulo</th>
                        <th class="fechaInicio">Fecha Inicio</th>
                        <th class="fechaFin">Fecha Fin</th>
                        <th>Descripcion</th>
                        <th>Estado</th>
                        <th>Proceso</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Actividad</h5>
                <button type="button" class="btn btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form class="formulario" id="form">
                    <div class="row">

                        <div class="col-sm-12">
                            <input type="hidden" id="txtIdActividad" />

                            <div class="form-group" id="grupo__titulo">
                                <label for="txtTitulo" id="formulario__label">Titulo *</label>
                                <input type="text" class="form-control" name="titulo" id="txtTitulo">
                            </div>

                            <div class="form-group" id="grupo__fechaIni">
                                <label for="txtFechaIni">Fecha Inicio *</label>
                                <input type="date" class="form-control" name="fechaInicio" id="txtFechaIni">
                            </div>

                            <div class="form-group" id="grupo__fechaFin">
                                <label for="txtFechaFin">Fecha Fin *</label>
                                <input type="date" class="form-control" name="fechaFin" id="txtFechaFin">
                            </div>

                            <div class="form-group" id="grupo__descripcion">
                                <label for="txtDescripcion">Descripcion </label>
                                <input type="text" class="form-control" name="descripcion" id="txtDescripcion">
                            </div>

                            <div class="form-group">
                                <label for="txtResponsables">Responsables *</label>
                                <select class="form-control" id="cboResponsables" name="Responsable:"></select>
                                <button class="btn btn-primary" type="button" id="btnResponsables" onclick="Responsables()">
                                    <i class="fas fa-user-plus"></i>
                                </button>   
                            </div>

                            <div class="form-group">
                                <label for="txtRecursos">Recursos *</label>
                                <select class="form-control" id="cboRecurso" name="Activo"></select>
                                <button class="btn btn-primary" type="button" id="btnRecursos" onclick="Recursos()">
                                    <i class="fas fa-cart-plus"></i>
                                </button>
                            </div>

                            <div class="form-group">
                                <label for="txtEstado">Estado *</label>
                                <select class="form-control" id="cboEstado" name="Activo">
                                    <option value="1">Activo</option>
                                    <option value="0">No Activo</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="txtProceso">Proceso *</label>
                                <select class="form-control" id="cboProceso" name="Nuevo">
                                    <option value="Nuevo">Nuevo</option>
                                    <option value="Proceso">En Proceso</option>
                                    <option value="Terminado">Terminado</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="txtProyecto">Proyecto *</label>
                                <select class="form-control" id="cboProyecto" name="Proyecto:"></select>
                            </div>

                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                <button id="guardar" type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Crear_Actividad.js")" type="text/javascript"></script>

}
