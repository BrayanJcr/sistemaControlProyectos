
@{
    ViewBag.Title = "Reunion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<
<div class="row m-4">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                Reuniones
            </div>
            <div class="card-body">
                <table class="display responsive nowrap" id="tbReunion" style="width:100%">
                    <thead>
                        <tr>

                            <th>Tipo de Reunion</th>
                            <th>Fecha</th>
                            <th>Ubicacion</th>
                            <th>Tema</th>
                            <th>Etapa</th>
                            <th>ID Proyecto</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>

    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Nueva Reunion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">


                        <input type="hidden" id="txtIDReunion" />
                        <div class="form-group">
                            <label for="txtTipoDeReunion">Tipo De Reunion:</label>
                            <input type="text" class="form-control" id="txtTipoDeReunion">
                        </div>
                        <div class="form-group">
                            <label for="txtFecha">Fecha:</label>
                            <input type="date" class="form-control" id="txtFecha">
                        </div>
                        <div class="form-group">
                            <label for="txtUbicacion">Ubicacion:</label>
                            <input type="text" class="form-control" id="txtUbicacion">
                        </div>
                        <div class="form-group">
                            <label for="txtTema">Tema:</label>
                            <input type="text" class="form-control" id="txtTema">
                        </div>
                        <div class="form-group">
                            <label for="txtEtapa">Etapa:</label>
                            <select class="form-control" id="cboProceso" name="Nuevo">
                                <option value="Nuevo">Nuevo</option>
                                <option value="Proceso">En Proceso</option>
                                <option value="Terminado">Terminado</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="txtIDProyecto">ID Proyecto:</label>
                            <input type="text" class="form-control" id="txtIDProyecto">
                        </div>


                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="@Url.Content("~/Scripts/Views/Crear_Reunion.js")" type="text/javascript"></script>


}



