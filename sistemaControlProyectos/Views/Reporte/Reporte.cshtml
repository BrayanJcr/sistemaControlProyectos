
@{
    ViewBag.Title = "Reportes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reportes</h1>
<form class="formulario" id="form">
    <div class="row">
        <div class="col-sm-12">

            <div class="form-group">
                <label for="date">Fecha:</label>
                <input type="date" id="txtFecha" name="fecha" disabled>
            </div>
            <br>
            <div class="form-group">
                <label>Reporte Personal</label>
            </div>
            <br>
            <div>
                <textarea id="txtDescripcion" rows="4" cols="150" placeholder="Ejm. Descripcion de reporte">Detalles.</textarea>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header p-2 bg-dark text-white">
                            Seleccione las actividades
                        </div>
                        <div class="card-body p-3">
                            <table id="tblActividad" class="table table-bordered table-sm" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Selecione</th>
                                        <th class="titulo">Titulo</th>
                                        <th class="fechaInicio">Fecha Inicio</th>
                                        <th class="fechaFin">Fecha Fin</th>
                                        <th>Descripcion</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div class="form-group">
                <label>Sube un archivo: *</label>
                <input type="file" id="format" />
            </div>
            <br>
            <div>
                <button id="guardar" type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Crear_Reporte.js")" type="text/javascript"></script>

}



