
@{
    ViewBag.Title = "Revisar";
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>

<h2>REPORTES</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header bg-dark text-white">
                Revision de Reporte
            </div>
            <div class="card-body">

                <div class="row align-items-end">

                    <input type="hidden" id="txtIdActividad" />

                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <label for="txtFechInic" class="col-form-label col-form-label-sm"> Fecha de Inicio:</label>
                            <input type="date" class="form-control form-control-sm model" id="txtFechInic" name="FechaReportecio" autocomplete="off">
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <label for="txtFechFin" class="col-form-label col-form-label-sm">Fecha de fin:</label>
                            <input type="date" class="form-control form-control-sm model" id="txtFechFin" name="Descripcion" autocomplete="off">
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="form-group mb-0">
                            <label for="txtEstado" class="col-form-label col-form-label-sm">Estado Aprobación:</label>
                            <select class="form-control form-control-sm model" id="txtEstado" name="Tienda">
                                <option value="Todo">---Todo----</option>
                                <option value="Rechazado">Rechazado</option>
                                <option value="Pendiente">Pendiente</option>
                                <option value="Aceptado">Aceptado</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <button id="btnBuscar" type="button" class="btn btn-sm btn-primary btn-block" onclick="buscar()"> <i class="fas fa-search"></i> Buscar</button>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-header">
                            REPORTES
                        </div>
                        <div class="card-body">
                            <table id="tblReporte" class="table table-light nowrap compact" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Enviado</th>
                                        <th>Fecha Reporte</th>
                                        <th>Estado</th>
                                        <th>Revisar</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade in" role="document" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 60%;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Revisar Reporte</h5>
                <button type="button" class="btn btn-close" data-dismiss="modal" aria-label="Close" onclick="Cerrar()"></button>
            </div>
            <div class="modal-body">

                <form class="formulario" id="form">
                    <div class="row">

                        <div class="col-sm-12">
                            <input type="hidden" id="txtIdReporte" />

                            <div class="form-group" id="grupo__Usuario">
                                <label for="txtUsuario" id="formulario__label">Profesional</label>
                                <input type="text" class="form-control" name="Usuario" id="txtUsuario" disabled>
                            </div>

                            <div class="form-group" id="grupo__FechaReporte">
                                <label for="txtFechaReporte"> Fecha Reporte</label>
                                <input type="date" class="form-control" name="fechaReporte" id="txtFechaReporte" disabled>
                            </div>

                            <div class="form-group" id="grupo__Descripcion">
                                <label for="txtDescripcion">Descripcion</label>
                                <textarea type="date" class="form-control" name="Descripcion" id="txtDescripcion" disabled></textarea>
                            </div>

                            <div class="form-group" id="grupo__descripcion">
                                <label for="txtEstadoMod">Estado </label>
                                <input type="text" class="form-control" name="Estado" id="txtEstadoMod" disabled>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header p-2 bg-dark text-white">
                                            Actividades Involucradas
                                        </div>
                                        <div class="card-body p-3">
                                            <table id="tblActividad" class="table table-bordered table-sm" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th class="titulo">Titulo</th>
                                                        <th class="fechaInicio">Fecha Inicio</th>
                                                        <th class="fechaFin">Fecha Fin</th>
                                                        <th>Descripcion</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="txtDocumento">Revisar archivo:</label>
                                <br />
                                <input type="file"  id="txtDocumento" />
                            </div>

                        </div>
                    </div>
                </form>

            </div>

            <div class="modal-footer">
                <div class="w-100">
                    <button type="button" class="btn btn-succes" onclick="Guardar()">Aprobar</button>
                    <button type="button" class="btn btn-danger" onclick="Guardar()">Desaprobar</button>
                </div>
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="Cerrar()">Cerrar</button>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Revision_Reporte.js")" type="text/javascript"></script>
}
