<h2>REPORTES</h2>



<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Reporte de ventas
            </div>
            <div class="card-body">
                <div class="row align-items-end">
                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <label for="txtRucProveedor" class="col-form-label col-form-label-sm"> Fecha de Inicio:</label>
                            <input type="date" class="form-control form-control-sm model" id="txtFechaReportecio" name="FechaReportecio" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <label for="txtRucProveedor" class="col-form-label col-form-label-sm">Fecha de fin:</label>
                            <input type="date" class="form-control form-control-sm model" id="txtDescripcion" name="Descripcion" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group mb-0">
                            <label for="txtIDReporte" class="col-form-label col-form-label-sm">ID Reporte:</label>
                            <select class="form-control form-control-sm model" id="cboTienda" name="Tienda"></select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <button id="btnBuscar" type="button" class="btn btn-sm btn-primary btn-block"><i class="fas fa-search"></i> Buscar</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row mb-2">
                    <div class="col-sm-12">
                        <button class="btn btn-info float-left" onclick="printData()">
                            <i class="fas fa-print"></i> Imprimir
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-header">
                            Reporte
                        </div>
                        <div class="card-body">
                            <table id="tblReporte" class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th class="Usuario">Usuario</th>
                                        <th class="FechaReporte"> Fecha Reporte</th>
                                        <th class="Descripcion">Descripcion</th>
                                        <th>Estado</th>
                                        <th>Documento</th>

                                    <tr>
                                        <td>4</td>
                                        <td>Brayam</td>
                                        <td>2021-10-20</td>
                                        <td>saa</td>
                                        <td>True</td>

                                    </tr>
                                    <tr>
                                        <td>5</td>
                                        <td>Brayam</td>
                                        <td>2021-10-22</td>
                                        <td>Resultados</td>
                                        <td>True</td>

                                    </tr>








                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Agregar Reporte</h5>
                                <button type="button" class="btn btn-close" data-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">

                                <form class="formulario" id="form">
                                    <div class="row">

                                        <div class="col-sm-12">
                                            <input type="hidden" id="txtIdReporte" />

                                            <div class="form-group" id="grupo__Usuario">
                                                <label for="txtUsuario" id="formulario__label">Usuario *</label>
                                                <input type="text" class="form-control" name="Usuario" id="txtUsuario">
                                            </div>

                                            <div class="form-group" id="grupo__FechaReporte">
                                                <label for="txtFechaReporte"> Fecha Reporte *</label>
                                                <input type="date" class="form-control" name="fechaReporte" id="txtFechaReporte">
                                            </div>

                                            <div class="form-group" id="grupo__Descripcion">
                                                <label for="txtDescripcion">Descripcion *</label>
                                                <input type="date" class="form-control" name="Descripcion" id="txtDescripcion">
                                            </div>

                                            <div class="form-group" id="grupo__descripcion">
                                                <label for="txtEstado">Estado </label>
                                                <input type="text" class="form-control" name="Estado" id="txtEstado">
                                            </div>

                                            <div class="form-group" id="grupo__descripcion">
                                                <label for="txtDescripcion">Descripcion </label>
                                                <input type="text" class="form-control" name="Estado" id="txtEstado">
                                            </div>
                                            <div class="form-group" id="grupo__descripcion">
                                                <label for="txtDescripcion">Documento </label>
                                                <input type="text" class="form-control" name="Estado" id="txtDocumento">
                                            </div>


                                            <div class="form-group">
                                                <label for="txtResponsables">Responsables *</label>
                                                <select class="form-control" id="cboResponsables" name="Responsable:"></select>
                                                <button class="btn btn-primary" type="button" id="btnResponsables" onclick="Responsables()">
                                                    <i class="fas fa-user-plus"></i>
                                                </button>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtRecursos">Recursos *</label>
                                                <select class="form-control" id="cboRecurso" name="Activo"></select>
                                                <button class="btn btn-primary" type="button" id="btnRecursos" onclick="Recursos()">
                                                    <i class="fas fa-cart-plus"></i>
                                                </button>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtEstado">Estado *</label>
                                                <select class="form-control" id="cboEstado" name="Activo">
                                                    <option value="1">Activo</option>
                                                    <option value="0">No Activo</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtProceso">Proceso *</label>
                                                <select class="form-control" id="cboProceso" name="Nuevo">
                                                    <option value="Nuevo">Nuevo</option>
                                                    <option value="Proceso">En Proceso</option>
                                                    <option value="Terminado">Terminado</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtProyecto">Proyecto *</label>
                                                <select class="form-control" id="cboProyecto" name="Proyecto:"></select>
                                            </div>

                                        </div>
                                    </div>
                                </form>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                                <button id="guardar" type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>

                @section scripts{
                    <script src="@Url.Content("~/Scripts/Views/Reporte_Tabla.js")" type="text/javascript"></script>
                }
