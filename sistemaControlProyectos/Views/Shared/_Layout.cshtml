<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Grupo Bravajal</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Plugins.css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href="~/Content/menu/css/menuSt.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>
<body>
    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content">
                <div class="sidebar-brand">
                    <a href="#">Grupo Bravajal</a>
                    <div id="close-sidebar">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
                <div class="sidebar-header">
                    <div class="user-pic">
                        <img class="img-fluid img-rounded" >
                    </div>
                    <div class="user-info">
                        <span class="user-name">
                            Brayan
                            <strong>Javier</strong>
                        </span>
                        <span class="user-role">Administrator</span>
                        <span class="user-status">
                            <i class="fa fa-circle"></i>
                            <span>Online</span>
                        </span>
                    </div>
                </div>
                <!-- sidebar-header  -->
                <div class="sidebar-search">
                    <div>
                        <div class="input-group">
                            <input type="text" class="form-control search-menu" placeholder="Search...">
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- sidebar-search  -->
                <div class="sidebar-menu">
                    <ul>
                        <li class="header-menu">
                            <span>General</span>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="javascript:;">
                                <i class="fa fa-tachometer-alt"></i>
                                <span>Tablero</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="#">Dashboard 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Dashboard 2</a>
                                    </li>
                                    <li>
                                        <a href="#">Dashboard 3</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-users"></i>
                                <span>Usuarios</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        @Html.ActionLink("Usuario", "Usuario", "Usuario")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Profesional", "Profesional", "Profesional")
                                    </li>
                                    <li>
                                        <a href="#">Credit cart</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-list-alt"></i>
                                <span>Recurso</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="/Recursos/Recursos">Recursos</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-list-alt"></i>
                                <span>Permisos</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="/Cargo/Cargo">Cargo</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-list-alt"></i>
                                <span>Proyectos</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="/Proyectos/Proyectos">Proyectos</a>
                                    </li>
                                    <li>
                                        <a href="/Proyectos/AsignarProfesional">Asignar Profesional</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-list-alt"></i>
                                <span>Actividades</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="/Actividades/Actividades">Actividades</a>
                                    </li>
                                    <li>
                                        <a href="/Actividades/AsignarResponsable">Asignar Responsable</a>
                                    </li>
                                    <li>
                                        <a href="/Actividades/AsignarRecursos">Asignar Recurso</a>
                                    </li>
                                    <li>
                                        <a href="/Gantt/Gantt">Gantt</a>
                                    </li>
                                    <li>
                                        @Html.ActionLink("Kanban", "Kanban", "Kanban")

                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-list-alt"></i>
                                <span>Area</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="/Area/Area">Area</a>
                                    </li>
                                    <li>
                                        <a href="/Area/Organigrama">Organigrama</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                    <!-- sidebar-menu  -->
                </div>
                <!-- sidebar-content  -->
                <div class="sidebar-footer">
                    <a href="#">
                        <i class="fa fa-bell"></i>
                        <span class="badge badge-pill badge-warning notification">3</span>
                    </a>
                    <a href="#">
                        <i class="fa fa-cog"></i>
                        <span class="badge-sonar"></span>
                    </a>
                    <a href="#">
                        <i class="fa fa-power-off"></i>
                    </a>
                </div>
            </div>
        </nav>
        <!-- sidebar-wrapper  -->
        <main class="page-content">
            <div class="container-fluid">
                <div class="row m-4">
                </div>
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Todos los derechos reservados</p>
                </footer>
            </div>
        </main>
        <!-- page-content" -->
    </div>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Content/menu/js/menu.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/Plugins.js")
    @RenderSection("scripts", required: false)
</body>
</html>
