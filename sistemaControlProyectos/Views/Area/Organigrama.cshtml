
@{
    ViewBag.Title = "Organigrama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<label for="titulo" id="tituloIni">ORGANIGRAMA DINAMICO</label>

<button type="button" class="btn btn-danger" onclick="obtenerOrga()">Obtener Organigrama</button>

<button type="button" class="btn btn-danger" onclick="AbrirModalOrga()">Guardar Organigrama</button>

<button type="button" class="btn btn-danger" onclick="LlamarDatos(0)">Listar Organigrama</button>
<button type="button" class="btn-download btn btn-danger" id="btn-download"><i class="fa fa-download"></i> Descargar Diagrama</button>

<div class="row">
    <div class="col-sm-12">
        <div class="mb-3" id="accordion">
            <div class="card ">
                <div class="card-header p-3 bg-dark text-white">
                    <h4 class="m-0">Filtros</h4>
                </div>

                <div>
                    <div class="card-body p-3">
                        <!--Buscar Responsable-->
                        <div class="row">
                            <div class="col-sm-3"><h4 class="m-0">Responsable</h4></div>
                        </div>

                        <div class="row align-items-end">
                            <input id="txtIDArea" type="hidden" value="0" />
                            <div class="col-sm-2">
                                <div class="form-group mb-0">
                                    <label for="txtDNI" class="col-form-label col-form-label-md">DNI:</label>
                                    <input type="text" class="form-control form-control-md model" readonly id="txtDNI" name="DNI">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group mb-0">
                                    <label for="txtNombreRes" class="col-form-label col-form-label-md">Nombre:</label>
                                    <input type="text" class="form-control form-control-md model" readonly id="txtNombreRes" name="Nombre">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group mb-0">
                                    <label for="txtCargo" class="col-form-label col-form-label-md">Cargo:</label>
                                    <input type="text" class="form-control form-control-md model" readonly id="txtCargo" name="Cargo">
                                </div>
                            </div>

                            <div class="col-sm-2">
                                <div class="form-group mb-0">
                                    <button id="btnBuscarRespo" type="button" class="btn btn-md btn-success btn-block" onclick="buscarResponsable()"><i class="fas fa-search"></i> Empleado</button>
                                    <button id="btnBuscarArea" type="button" class="btn btn-md btn-success btn-block" onclick="buscarArea()"><i class="fas fa-search"></i> Area</button>
                                </div>
                            </div>

                            <!--Boton Asignar Responsable-->
                            <div class="col-sm-2">
                                <div class="form-group mb-0">
                                    <button id="btnAsignar" type="button" class="btn btn-sm btn-primary" onclick="filtrar()">
                                        <i class="fas fa-clipboard"></i>
                                        Filtrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Modal Agregar Cargos-->
<div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <label for="txtTitulo" id="formulario__Title">Cargos</label>
            </div>
            <div class="modal-body">

                <form class="formulario" id="form">
                    <div class="row">

                        <div class="col-sm-12">
                            <input type="hidden" id="txtIdArea" />

                            <input type="hidden" id="txtEstado" />

                            <div class="form-group" id="grupo__titulo">
                                <label for="txtNombre" id="formulario__label">Nombre *</label>
                                <input type="text" class="form-control" name="nombre" id="txtNombre" placeholder="Ejm. TIC">
                            </div>


                            <div class="form-group">
                                <label for="txtEncargado">Encargado *</label>
                                <select class="form-control" id="cboEncargado" name="Encargado:"></select>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="Cerrar()">Cerrar</button>
                <button id="guardar" type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>


<div id="GuardarModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <label for="txtTitulo" id="formulario__Title">Guardar Organigrama</label>
            </div>
            <div class="modal-body">

                <form class="formulario" id="form">
                    <div class="row">

                        <div class="col-sm-12">
                            <input type="hidden" id="txtIdArea" />

                            <input type="hidden" id="txtEstado" />

                            <div class="form-group" id="grupo__titulo">
                                <label for="txtNombre" id="formulario__label">Nombre *</label>
                                <input type="text" class="form-control" name="nombre" id="txtNombreGrafico" placeholder="Ejm. Grafico del area de TIC" required>
                            </div>


                            <div class="form-group">
                                <label for="txtEncargado">Encargado *</label>
                                <select class="form-control" id="cboEmpleado" name="Encargado:"></select>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="CerrarGuardarOrganigrama()">Cerrar</button>
                <button id="guardar" type="button" class="btn btn-primary" onclick="GuardarOrga()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!--Modal Obtener Organigrama-->
<div id="modalOrganigrama" class="modal fade in" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h3 class="modal-title">Organigramas</h3>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbOrganigrama" class="table table-light border-1 nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Grafico</th>
                                <th>Usuario</th>
                                <th>Cargo</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" onclick="CerrarObtenerOrganigrama()">Cerrar</button>
            </div>
        </div>
    </div>
</div>


<!--Modal Area-->
<div id="modalArea" class="modal fade in" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h3 class="modal-title">Filtros Area</h3>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbArea" class="table table-light border-1 nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nombre</th>
                                <th>Padre</th>
                                <th>Encargado</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" onclick="CerrarArea()">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!--Modal Empleado-->
<div id="modalEmpleado" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <label for="txtTitulo" id="formulario__Title">Detalles Encargado</label>
            </div>
            <div class="modal-body">

                <form class="formulario" id="form">
                    <div class="row">

                        <div class="col-sm-12">

                            <input type="hidden" class="form-control" name="nombre" id="txtIdAreaEmple" readonly>

                            <div class="form-group" id="grupo__titulo">
                                <label for="txtDni" id="formulario__label">DNI </label>
                                <input type="text" class="form-control" name="nombre" id="txtDni" readonly>
                            </div>
                            <div class="form-group">
                                <label for="txtNombreEmpDeta">Nombre *</label>
                                <input class="form-control" id="txtNombreEmpDeta" name="Encargado:" readonly />
                            </div>
                            <div class="form-group">
                                <label for="txtCargoEmpDeta">Cargo</label>
                                <input class="form-control" id="txtCargoEmpDeta" name="Encargado:" readonly />
                            </div>
                            <div class="form-group">
                                <label for="txtCorreo">Correo</label>
                                <input class="form-control" id="txtCorreo" name="Encargado:" readonly />
                            </div>
                            <div class="form-group">
                                <label for="txtFuncion">Funcion</label>
                                <input class="form-control" id="txtFuncion" name="Encargado:" readonly />
                            </div>
                            <div class="form-group">
                                <label for="txtTelefono">Telefono</label>
                                <input class="form-control" id="txtTelefono" name="Encargado:" readonly />
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="CerrarDetallesEmp()">Cerrar</button>
                <button id="correo" type="button" class="btn btn-primary" onclick="VerEstado()">Enviar Correo</button>
            </div>
        </div>
    </div>
</div>
<div id="modalResponsable" class="modal fade in" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h3 class="modal-title">Filtros Responsables</h3>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbResponsable" class="table table-light border-1 nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>DNI</th>
                                <th>Nombre</th>
                                <th>Cargo</th>
                                <th>Funcion</th>
                                <th>Area</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" onclick="CerrarResponsable()">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div id="modalSeleccionarRemitente" class="modal fade in" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h3 class="modal-title">Filtros Responsables</h3>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tblEnviarEmail" class="table table-light border-1 nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" onchange="CheckAll(this)" />
                                </th>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Funcion</th>
                                <th>Area</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-success" data-dismiss="modal" onclick="AbrirModalEnviarEmail()">Enviar Correo</button>
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" onclick="CerrarRemitentes()">Cerrar</button>
            </div>
        </div>
    </div>
</div>


<!-- Div Modal Enviar Correo -->
<!-- Modal -->

<div class="modal fade in" id="ModalEnviarCorreo" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Enviar Correo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div>
                    <label>Codigo: </label>
                    <input type="text" id="txtCodigo" class="form-control form-control-lg" />
                </div>
                <div>
                    <label>De: </label>
                    <input type="text" id="txtEmisor" class="form-control form-control-lg" disabled readonly />
                </div>
                <div>
                    <label>Para: </label>
                    <input type="text" id="txtReceptor" class="form-control form-control-lg" disabled />
                </div>
                <div>
                    <label>Asunto: </label>
                    <input type="text" id="txtAsunto" class="form-control form-control-lg" />
                </div>
                <div>
                    <label>Mensaje: </label>
                    <textarea class="form-control form-control-lg" id="txtMensaje"></textarea>
                </div>
                <div>
                    <label>Archivo: </label>
                    <input type="file" id="txtArchivo" class="form-control form-control-lg" />
                    <img type="text" src="" id="upload" />
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" onclick="SendMail()" class="btn btn-primary">Enviar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Validar Si el correo Existe-->
<div class="modal fade in" id="ModalVerificarCorreo" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Verificar Correo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="register-form" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Correo electrónico</label>
                        <input name="email" id="email" type="email" class="form-control" placeholder="example@example.com">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña F2A</label>
                        <input name="password" id="password" type="password" class="form-control" placeholder="Password">

                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" onclick="VerificarCorreo()" class="btn btn-primary">Verificar</button>
            </div>
        </div>
    </div>
</div>



