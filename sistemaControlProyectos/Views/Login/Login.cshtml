@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Loguearse.cshtml";
}

    <div>
        <img id="logo_bravajal" src="~/imagenes/logoEmpresa.png" />
    </div>

    <div class="w3-container w3-center w3-animate-left">
        <div class="container login-container">
            <div class="row" id="tablero_row">

                
                    <div class="col-md-6 login-form-1" id="form">
                        <h3>Firma Digital</h3>
                        <div class="w3-container">
                            <br>
                            @using (Html.BeginForm("LoginFirma", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <ul class="w3-ul">
                                <li class="w3-jumbo">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-file"></i></span>
                                    </div>
                                    <input type="file" class="form-control" id="FirmaLogin" name="FirmaDigital" />

                                </li>
                            </ul>
                            <div>
                                <span style="color: red">@ViewBag.ErrorFirma</span>

                            </div>
                            <div class="form-group">
                                <input type="submit" class="btnSubmit" value="Login" />
                            </div>
                            }
                        </div>
                    </div>

               
                    <div class="col-md-6 login-form-1" id="form">
                        <h3>Inicie Sesion</h3>
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input type="text" class="form-control" placeholder="username" name="username" required />

                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                <input type="password" class="form-control" placeholder="password" name="password" required />
                            </div>
                            <div>
                                <span style="color: red">@ViewBag.Error</span>

                            </div>
                            <div class="form-group">
                                <input type="submit" class="btnSubmit" value="Login" />
                            </div>
                            <div class="form-group">
                                <a href="#" class="ForgetPwd">Olvido su contraseña?</a>
                            </div>
                        }
                        </div>
            </div>
                
        </div>
    </div>
    <script src="~/Scripts/Views/LoginFirma.js" type="text/javascript"></script>
}
