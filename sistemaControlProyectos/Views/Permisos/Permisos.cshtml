
@{
    ViewBag.Title = "Permisos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Permisos/Permisos.css" rel="stylesheet" />

<h2>Permisos</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header bg-dark text-white">
                Asignar Permisos
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2">
                        <label>Seleccion Rol:</label>
                    </div>
                    <div class="col-sm-3">
                        <select class="form-control form-control-sm model" id="cboRol" name="Activo"></select>
                    </div>
                    <div class="col-sm-2">
                        <button id="btnBuscar" type="button" class="btn btn-sm btn-primary btn-block" onclick="buscar()"> <i class="fas fa-search"></i> Buscar</button>
                    </div>
                    <div class="col-sm-2">
                        <button id="btnGuardarCambios" class="btn btn-sm btn-success btn-block" onclick="Guardar()"><i class="fas fa-save"></i> Guardar Cambios</button>
                    </div>
                </div>
                <hr />
                <div class="row mt-3 card-load">
                    <div class="col-sm-12">
                        <div class="table-responsive">
                            <table id="tbpermiso" class="table table-bordered table-sm" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Activar</th>
                                        <th>Menu</th>
                                        <th>Sub Menu</th>
                                        <th>Edicion</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Crear_Permisos.js")" type="text/javascript"></script>
}
