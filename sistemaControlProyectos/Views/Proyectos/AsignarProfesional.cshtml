
@{
    ViewBag.Title = "AsignarProfesional";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AsignarProfesional</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="mb-3" id="accordion">
            <div class="card ">
                <div class="card-header p-2 bg-dark text-white">
                    Asignar Profesional a Proyecto
                </div>

                <div>
                    <div class="card-body p-3">
                        <!--Buscar Proyecto-->
                        <div class="row">
                            <div class="col-sm-3"><h6 class="m-0">Proyecto</h6></div>
                        </div>
                        <div class="row align-items-end">
                            <input id="txtIdProyecto" type="hidden" value="0" />
                            <div class="col-sm-2">
                                <div class="form-group mb-0">
                                    <label for="txtNombreProye" class="col-form-label col-form-label-sm">Nombre Proyecto:</label>
                                    <input type="text" class="form-control form-control-sm model" readonly id="txtNombreProye" name="Nombre">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group mb-0">
                                    <label for="txtUbicacion" class="col-form-label col-form-label-sm">Ubicacion:</label>
                                    <input type="text" class="form-control form-control-sm model" readonly id="txtUbicacion" name="Ubicacion">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group mb-0">
                                    <label for="txtEncargado" class="col-form-label col-form-label-sm">Encargado:</label>
                                    <input type="text" class="form-control form-control-sm model" readonly id="txtEncargado" name="Encargado">
                                </div>
                            </div>

                            <div class="col-sm-2">
                                <div class="form-group mb-0">
                                    <button id="btnBuscarProyecto" type="button" class="btn btn-sm btn-success btn-block" onclick="buscarProyecto()"><i class="fas fa-search"></i> Buscar</button>
                                </div>
                            </div>

                            <hr class="m-2">
                        </div>

                        <!--Buscar Responsable-->
                        <div class="row">
                            <div class="col-sm-3"><h6 class="m-0">Profesional</h6></div>
                        </div>

                        <div class="row align-items-end">
                            <input id="txtIdResponsable" type="hidden" value="0" />
                            <div class="col-sm-2">
                                <div class="form-group mb-0">
                                    <label for="txtDNI" class="col-form-label col-form-label-sm">DNI:</label>
                                    <input type="text" class="form-control form-control-sm model" readonly id="txtDNI" name="DNI">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group mb-0">
                                    <label for="txtNombreRes" class="col-form-label col-form-label-sm">Nombre:</label>
                                    <input type="text" class="form-control form-control-sm model" readonly id="txtNombreRes" name="Nombre">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group mb-0">
                                    <label for="txtCargo" class="col-form-label col-form-label-sm">Cargo:</label>
                                    <input type="text" class="form-control form-control-sm model" readonly id="txtCargo" name="Cargo">
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group mb-0">
                                    <button id="btnBuscarRespo" type="button" class="btn btn-sm btn-success btn-block" onclick="buscarResponsable()"><i class="fas fa-search"></i> Buscar</button>
                                </div>
                            </div>
                            <!--Boton Asignar Responsable-->
                            <div class="col-sm-2">
                                <div class="form-group mb-0">
                                    <button id="btnAsignar" type="button" class="btn btn-sm btn-primary" onclick="asignarResponsable()">
                                        <i class="fas fa-clipboard"></i>
                                        Asignar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-dark text-white p-2">
                Lista de Asignaciones de Profesionales
            </div>
            <div id="card-lista" class="card-body p-3">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="table-responsive">
                            <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Nombre Proyecto</th>
                                        <th>Encargado del Proyecto</th>
                                        <th>Nombre Pofesional</th>
                                        <th>Cargo</th>
                                        <th>Area</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!--Modal Proyecto-->
<div class="modal fade" id="modalProyecto" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Proyectos</h5>
                <button type="button" class="btn btn-close-white btn-info" data-dismiss="modal" aria-label="Close" onclick="CerrarProyecto()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!--Tabla para proyectos-->
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbProyectos" class="table table-light border-1 nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Titulo</th>
                                <th>Responsable</th>
                                <th>Ubicacion</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" onclick="CerrarProyecto()">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!--Modal Resposable-->
<div class="modal fade" id="modalResponsable" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Profesionales</h5>
                <button type="button" class="btn btn-close-white btn-info" data-dismiss="modal" aria-label="Close" onclick="CerrarResponsable()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!--Tabla para Responsable-->
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbResponsable" class="table table-light border-1 nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>DNI</th>
                                <th>Nombre</th>
                                <th>Area</th>
                                <th>Cargo</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" onclick="CerrarResponsable()">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="@Url.Content("~/Scripts/Views/Profesional_AsignarProye.js")" type="text/javascript"></script>
}